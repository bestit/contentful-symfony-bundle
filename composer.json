{
    "name": "bestit/contentful-bundle",
    "description": "A simple contentful bundle providing you with an easy setup, easy contentmodels and a simple api providing the contentful contents as an array.",
    "minimum-stability": "beta",
    "license": "MIT",
    "authors": [
        {
            "name": "Bjoern Lange",
            "email": "lange@bestit-online.de"
        }
    ],
    "autoload": {
        "exclude-from-classmap": [
            "src/Tests/"
        ],
        "psr-4": {
            "BestIt\\ContentfulBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BestIt\\ContentfulBundle\\Tests\\": "src/Tests/"
        }
    },
    "require": {
        "php": "^7.0",
        "symfony/symfony": "^3.1",
        "doctrine/doctrine-cache-bundle": "^1.2",
        "symfony/monolog-bundle": "^2.8",
        "contentful/contentful-bundle": "^1.0 || ^2.0",
        "erusev/parsedown": "^1.6"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.7",
        "matthiasnoback/symfony-dependency-injection-test": "^1",
        "phpunit/phpunit": "^5"
    }
}
